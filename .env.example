# API
# APP_NAME=Isolated Command Execution API
# DEBUG=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Auth: set at least one of JWT_SECRET (for Bearer tokens) or API_KEYS (comma-separated)
JWT_SECRET=change-me-in-production
# API_KEYS=dev-key,another-key
# API_KEY_HEADER=X-API-Key

# Rate limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW_SECONDS=60

# Session TTL (seconds)
# SESSION_TTL_SECONDS=600

# Container execution limits
# CONTAINER_IMAGE=alpine:latest
# CONTAINER_MEM_LIMIT=256m
# CONTAINER_MEMSWAP_LIMIT=256m
# CONTAINER_CPU_PERIOD=100000
# CONTAINER_CPU_QUOTA=50000
# CONTAINER_PIDS_LIMIT=50
# DEFAULT_EXEC_TIMEOUT_SECONDS=30
# MAX_EXEC_TIMEOUT_SECONDS=120
# ALLOWED_COMMANDS=ls,cat,echo,pwd,id,whoami,sh

# Cleanup worker
# CLEANUP_INTERVAL_SECONDS=60
# CLEANUP_MAX_CONTAINER_AGE_SECONDS=900

# Workspace file tools (agent): max file size for read/write in bytes; 0 = no limit
# WORKSPACE_MAX_FILE_SIZE_BYTES=1048576
