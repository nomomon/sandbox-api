# API
# APP_NAME=Isolated Command Execution API
# DEBUG=false
# PORT=8000  (host port for API; set e.g. PORT=8001 if 8000 is in use)

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Auth: set at least one of JWT_SECRET (for Bearer tokens) or API_KEYS (comma-separated)
JWT_SECRET=change-me-in-production
# API_KEYS=dev-key,another-key
# API_KEY_HEADER=X-API-Key

# Rate limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW_SECONDS=60

# Session TTL (seconds)
# SESSION_TTL_SECONDS=600

# Container execution (default image has Python for agent/MCP use)
# CONTAINER_IMAGE=python:3.12-slim
# Optional: build Dockerfile.agent and set CONTAINER_IMAGE=sandbox-api-agent:latest
# CONTAINER_MEM_LIMIT=256m
# CONTAINER_MEMSWAP_LIMIT=256m
# CONTAINER_CPU_PERIOD=100000
# CONTAINER_CPU_QUOTA=50000
# CONTAINER_PIDS_LIMIT=50
# DEFAULT_EXEC_TIMEOUT_SECONDS=30
# MAX_EXEC_TIMEOUT_SECONDS=120
# ALLOWED_COMMANDS=ls,cat,echo,pwd,...,python,pip,git,curl,... (see config.py default)

# Cleanup worker
# CLEANUP_INTERVAL_SECONDS=60
# CLEANUP_MAX_CONTAINER_AGE_SECONDS=900

# Workspace file tools (agent): max file size for read/write in bytes; 0 = no limit
# WORKSPACE_MAX_FILE_SIZE_BYTES=1048576

# Persist /workspace in a named volume per session (default: false).
# When true: files survive container expiry; reusing the same session_id restores the volume.
# Volume is removed only on explicit DELETE /sessions/{session_id}.
# WORKSPACE_PERSIST_VOLUMES=false
